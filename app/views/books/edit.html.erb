<h1>Editing Book</h1>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<%= form_with model: @book, local:true do |f| %>
 
 <div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
 </div>
 <div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
 </div>
 <div class="actions">
  <%= f.submit 'Update Book' %>
 </div>
<% end %>

  <%= link_to "Show" ,  (@book) %>
    <text>|</text>
  <%= link_to "Back" , "/books" %>

  